<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view_sensor"
    android:layout_width="105dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sensor_card_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sensor_card_title"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="+25.8°C"
            android:textAlignment="center"
            android:textColor="@color/green4"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/sensor_card_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/square_bg_text"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Температура"
            android:textColor="@color/green4"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>